<h2><%= @post[1] %>を編集</h2>

<form action='/update/<%= @post[0] %>' method='post'>
  <label for='title'>タイトル</label><br>
  <input type="text" name="title" value="<%= @post[1] %>">
    <p></p>
    <label for="content">本文</label><br>
    <textarea name="content" cols="40" rows="10"><%= @post[2] %></textarea>
    <p></p>
    <button type="submit">保存する</button>
    <a href='/show/<%= @post[0] %>'>キャンセル</a>
</form>
